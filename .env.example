# Server Configuration
PORT=3000
NODE_ENV=production

# Security
SESSION_SECRET=your-secret-key-here-change-in-production-min-32-chars
CORS_ORIGIN=https://yourdomain.com

# Database (PostgreSQL + Neon)
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Seed Data Control
# Set to 'false' to disable auto-seeding on startup (default: true if database is empty)
# SEED_ON_STARTUP=false

# Cloudflare R2 Storage (for PDF files)
R2_ACCOUNT_ID=your-r2-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=vitamin-english-pdfs
R2_ENDPOINT=https://account-id.r2.cloudflarestorage.com

# Optional: Rate Limiting
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100
